<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.full_name %>
  </p>

  <p>
    <strong>Group:</strong>
    <%= user[:group_id].nil? ? 'None' : Group.find(user[:group_id]).groupname %>
  </p>

  <p>
    <strong>UIN:</strong>
    <%= user.uin %>
  </p>

  <p>
    <strong><%= user.admin ? 'Has' : 'Does not have' %> admin privileges</strong>
  </p>
</div>