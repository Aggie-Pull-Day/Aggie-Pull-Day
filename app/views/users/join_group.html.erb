<div class="card container" style="width: 20rem;">
  <div class="card-body">
  <% if flash[:error] %>
   <div class="alert alert-danger">
     <span class="error"><%= flash[:error] %></span>
   </div>
  <% end %>
  
  <h2>Join Group</h2>

  <%= form_with url: add_to_group_path, local: true, method: :post do %>
  <div>
   <%= label_tag "Enter group code:" %>
   <%= text_field_tag "code", nil %>
 </div>
  <br>
 <%= submit_tag "Join Group", :class => "btn btn-primary mb-4" %>

  <% end %>


  <div>
    <%= link_to "Cancel", @user, :class => "btn btn-secondary mb-2" %>
  </div>
  </div>
</div>