<style>
    body {
        background-image: linear-gradient(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.8)), url(<%= asset_path('kyle-field-westside-view.jpg') %>);
        background-size: cover;
        background-color: rgba(255, 255, 255, 0.8);
    }
</style>

<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% else %>
  <%= content_tag :h1, "Please Log in" %>
<% end %>
<%= form_with url: sessions_path do |f| %>

  <%= f.label :email %>: <%= f.text_field :email %><br>
  <%= f.label :password %>: <%= f.password_field :password %><br>
  <%#= link_to "Sign Up", new_user_path %>
  <%= f.submit "Sign In!" %>
<% end %>